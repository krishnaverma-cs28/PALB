class Solution:
    def minJumps(self, arr):
        if len(arr) <= 1:
            return 0
        if arr[0] == 0:
            return -1

        jumps = 0
        end = 0
        far = 0

        for i in range(len(arr) - 1):
            far = max(far, i + arr[i])
            if i == end:
                jumps += 1
                end = far
                if end >= len(arr) - 1:
                    return jumps

        return -1
