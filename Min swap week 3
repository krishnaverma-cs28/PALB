class Solution:
    def minSwap(self, arr, k):
        n = len(arr)

        # count elements <= k
        good = 0
        for num in arr:
            if num <= k:
                good += 1

        # count bad elements in first window
        bad = 0
        for i in range(good):
            if arr[i] > k:
                bad += 1

        ans = bad

        # sliding window
        i = 0
        j = good
        while j < n:
            if arr[i] > k:
                bad -= 1
            if arr[j] > k:
                bad += 1

            ans = min(ans, bad)

            i += 1
            j += 1

        return ans
